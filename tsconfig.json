{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ES2022",
        "moduleResolution": "node",
        "target": "ES2022",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "lib": ["ES2022", "dom"],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}